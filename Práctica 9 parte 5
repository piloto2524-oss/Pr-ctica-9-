#include <stdio.h>

int main ()
{
    int arr[] = {5, 4, 3, 2, 1};   // Arreglo correctamente inicializado
    int *apArr;                    // Se declara el apuntador apArr
    int x;

    apArr = arr;    // apArr apunta al primer elemento (equivale a &arr[0])

    printf("int arr[] = {5, 4, 3, 2, 1};\n");
    printf("apArr = &arr[0]\n\n");

    // A x se le asigna el elemento 0 del arreglo
    x = *apArr;
    printf("x = *apArr       -> x = %d\n", x);

    // A x se le asigna el elemento 1 del arreglo
    x = *(apArr + 1);
    printf("x = *(apArr+1)   -> x = %d\n", x);

    return 0;
}
