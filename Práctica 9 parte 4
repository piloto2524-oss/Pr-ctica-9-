#include <stdio.h>

int main ()
{
    int a = 5, b = 10, c[10] = {5, 4, 3, 2, 1, 9, 8, 7, 6, 0};
    int *apEnt;

    apEnt = &a;

    printf("a = 5, b = 10,\nc[10] = {5, 4, 3, 2, 1, 9, 8, 7, 6, 0}\n");
    printf("apEnt = &a\n\n");

    /* A la variable b se le asigna el contenido de la variable a la que apunta apEnt */
    b = *apEnt;
    printf("b = *apEnt       -> b = %i\n", b);

    /* A b se le asigna el contenido de la variable a la que apunta apEnt mÃ¡s uno */
    b = *apEnt + 1;
    printf("b = *apEnt + 1   -> b = %i\n", b);

    /* La variable a la que apunta apEnt se le asigna el valor cero */
    *apEnt = 0;
    printf("*apEnt = 0       -> ahora a = %i\n", a);

    return 0;
}
